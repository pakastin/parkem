
@import 'nib';

html {
  text-size-adjust: 100%;
}

body {
  background-color: #eee;
  overflow: hidden;
}

canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
car {
  position: absolute;

  > graphic {
    position: absolute;
    display: block;
    background-color: #f44336;
    transform: translate(-50%, -50%);
    border-radius: .25rem;

    windshield {
      display: block;
      position: absolute;
      top: 25%;
      left: 7.5%;
      width: 85%;
      height: 22.5%;
      background-color: rgba(#000, .1);
      border-radius: .125rem;
    }
    windshield-back {
      display: block;
      position: absolute;
      top: 75%;
      left: 7.5%;
      width: 85%;
      height: 12.5%;
      background-color: rgba(#000, .1);
      border-radius: .125rem;
    }
  }
}
wheel {
  position: absolute;
  display: block;

  > graphic {
    position: absolute;
    display: block;
    background-color: #333
    border-radius: .06125rem;
    transform: translate(-50%, -50%);
  }
}

trailer {
  position: absolute;

  > shaft {
    position: absolute;
    display: block;
    transform: translate(-50%, -50%);
    background-color: #aaa;
  }

  > graphic {
    position: absolute;
    display: block;
    transform: translate(-50%, -50%);
    background-color: #ccc;
    border-radius: .125rem;
  }
}

@media (max-width: 800px) {
  html {
    font-size: 50%;
  }
}
